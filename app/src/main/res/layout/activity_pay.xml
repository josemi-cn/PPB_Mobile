<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_color"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/cardNumber_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de targeta: "
            android:textAlignment="textEnd"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/cardNumber"
            app:layout_constraintBottom_toBottomOf="@+id/cardNumber"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cardNumber"/>

        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/cardNumber_text"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nom: "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="@+id/cardNumber_text"
            app:layout_constraintRight_toRightOf="@+id/cardNumber_text"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="text"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/cardNumber"
            app:layout_constraintBottom_toTopOf="@+id/date"
            app:layout_constraintLeft_toRightOf="@+id/name_text"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data d'expiraciÃ³: "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/date"
            app:layout_constraintBottom_toBottomOf="@+id/date"
            app:layout_constraintLeft_toLeftOf="@+id/name_text"
            app:layout_constraintRight_toRightOf="@+id/name_text"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="date"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintBottom_toTopOf="@+id/cvc"
            app:layout_constraintLeft_toRightOf="@+id/date_text"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/cvc_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CVC: "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/cvc"
            app:layout_constraintBottom_toBottomOf="@id/cvc"
            app:layout_constraintLeft_toLeftOf="@+id/date_text"
            app:layout_constraintRight_toRightOf="@+id/date_text"/>

        <EditText
            android:id="@+id/cvc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/date"
            app:layout_constraintBottom_toTopOf="@+id/buttons"
            app:layout_constraintLeft_toRightOf="@+id/cvc_text"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintTop_toBottomOf="@id/cvc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/cancel_button"/>

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/send_button"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_color"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>